{
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "noteKeywords": [
          "BREAKING CHANGE",
          "BREAKING CHANGES",
          "BREAKING"
        ],
        "writerOpts": {
          "groupBy": "type",
          "commitGroupsSort": [
            "feat",
            "fix",
            "perf",
            "docs"
          ],
          "commitsSort": "header",
          "transform": {
            "commit": "function(commit, context) { if (commit.author && commit.author.name) { commit.authorName = commit.author.name; commit.authorUrl = commit.author.url || `https://github.com/${commit.author.name}`; } return commit; }"
          },
          "commitPartial": "* {{#if scope}}**{{scope}}:** {{/if}}{{subject}} ([@{{authorName}}]({{authorUrl}})) {{#if hash}}([{{hash}}]({{commitUrlFormat}})){{/if}}"
        },
        "linkCompare": true,
        "preset": "conventionalcommits",
        "linkReferences": true,
        "presetConfig": {
          "types": [
            {
              "type": "build",
              "section": "ü¶ä CI/CD",
              "hidden": true
            },
            {
              "type": "chore",
              "section": "üßπ Other",
              "hidden": true
            },
            {
              "type": "ci",
              "section": "ü¶ä CI/CD",
              "hidden": true
            },
            {
              "type": "docs",
              "section": "üìî Docs",
              "hidden": false
            },
            {
              "type": "example",
              "section": "üìù Examples",
              "hidden": false
            },
            {
              "type": "feat",
              "section": "üöÄ Features",
              "hidden": false
            },
            {
              "type": "fix",
              "section": "üõ†Ô∏è Fixes",
              "hidden": false
            },
            {
              "type": "perf",
              "section": "‚è© Performance"
            },
            {
              "type": "refactor",
              "section": ":scissors: Refactor",
              "hidden": true
            },
            {
              "type": "revert",
              "section": "üôÖ‚ÄçÔ∏è Reverts"
            },
            {
              "type": "style",
              "section": "üíà Style",
              "hidden": true
            },
            {
              "type": "test",
              "section": "üß™ Tests",
              "hidden": true
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./scripts/publish.sh ${nextRelease.version} ${branch.name} ${commits.length} ${Date.now()}"
      }
    ],
    "@semantic-release/changelog",
    [
      "@semantic-release/git",
      {
        "message": "chore(release): üì¢ ${nextRelease.version}\n\n${nextRelease.notes}",
        "assets": [
          "hacs.json",
          "CHANGELOG.md",
          "README.md"
        ]
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          "dist/*.zip"
        ],
        "fail": true
      }
    ]
  ],
  "branches": [
    "main",
    {
      "name": "dev",
      "prerelease": true,
      "channel": "dev"
    }
  ]
}
